---
import Header from '../components/Header.astro'
import Layout from '../layout/Layout.astro'

const response = await fetch('http://localhost:8000/groups')
const groups = await response.json()
---

<Layout>
  <Header />

  <main class='p-4'>
    <h2 class='text-2xl font-semibold mb-4'>Cursos</h2>

    <ul id='groups-list' class='grid grid-cols-3 gap-4'>
      {groups.map(group => {
        return ( 
          <a href={`/groups/${group.id_group}`}>
            <li class='bg-white p-4 rounded-lg shadow-md cursor-pointer hover:bg-gray-200 transition transform hover:scale-105 text-center'>
              {group.name}
            </li>
          </a>
        )
      })}
    </ul>
  </main>
</Layout>

