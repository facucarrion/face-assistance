---
import Layout from "../layout/Layout.astro"
---

<Layout>
	<!-- <form method="post" action="<?= base_url('verificarUsuario') ?>"> -->
      <form class="w-[500px]">
		<div class="flex flex-col">
		   <label class="text-red-500">Usuario</label>
		   <input class="border-2 rounded-lg focus:outline-none" type="text" name="username" id="username" required>
		</div>
  
		<div class="form-group">
		   <label>Contraseña</label>
		   <input type="password" name="password" id="password" placeholder="Ingrese su contraseña" required>
		   
		</div>
  
		<div class="form-group">
		   <button type="submit" name="grabar" id="guardar"> Iniciar Sesión </button>
		</div>
	</form>
</Layout>